{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} / tweets{% endblock %}

 {% block opengraph_meta %}
  		{{parent()}}
  {% endblock %} 

{% block body %}
	{{ parent() }}
	

	<script src="js/tweets.js"></script>

    <div class="clearfix"></div>

	<div class="row" >
		<form class="form-inline" id="search-form">
		 	<div class="form-group">
		    	<label for="exampleInputName2">Query</label>
		    	<input type="text" class="form-control" id="q" placeholder="butts">
		  	</div>
		  	<div class="form-group">
		    	<label for="exampleInputEmail2">Until</label>
		    	<input type="date" class="form-control" id="until" placeholder="2015-04-15">
		  	</div>
		  	<a id="search" class="btn btn-default">Search</a>
		</form>
	</div>
	<div class="row" id="tweet-list">
	</div>

	<script type="text/template" id="tweet-container">
	<div class="row">
		<blockquote id="<%-id%>" class="twitter-tweet">
			<p><%=displayText%></p><br />
			<small><a href="https://twitter.com/<%-name%>/status/<%-id%>" target="_blank"><%-created_at%></a></small>
		</blockquote>
	</div>
	</script>

	<script type="text/template" id="tweet-image">
	<a href="<%-expanded_url%>" target="_blank"><img src="<%-media_url%>" /></a>
	</script>

	<div class="row" >
	</div>
{% endblock %}

