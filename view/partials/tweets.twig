{% extends 'layout-sidenav.html.twig' %}

{% block title %}{{parent()}} / tweets{% endblock %}

 {% block opengraph_meta %}
  		{{parent()}}
  {% endblock %}

{% block body %}
	{{ parent() }}


	<script src="js/tweets.js"></script>

    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle" title="Toggle Menu"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a>
    <br />
    <div class='banner-container'></div>

    <h3 id="tweet-count"></h3>
  <small id="date-range"></small><br />
	<div class="row" id="tweet-list">
	</div>

	<script type="text/template" id="tweet-container">
	<div class="row">
		<blockquote data-id="<%-id_str%>" id="tweet<%-id_str%>" class="twitter-tweet">
			<input type="checkbox" data-id="<%-id_str%>" />
			<p><%=displayText%></p>
			<br />
			<small><a href="https://twitter.com/<%-user.name%>/status/<%-id_str%>" target="_blank" class="timestamp"><%-created_at%></a></small><br />
			<span class="label label-default pull-left"><%-id_str%></span>
            <% if (favorite_count > 0) { %> <span class="label label-info pull-left">favs: <%-favorite_count%></span> <% } %>
            <% if (retweet_count > 0) { %> <span class="label label-info pull-left">rts: <%-retweet_count%></span> <% } %>
            <a class="btn btn-default btn-xs pull-right preview" data-id="<%-id_str%>">preview</a> <a class="btn btn-default btn-xs pull-right delete" data-id="<%-id_str%>">delete</a>
            <div class="preview-pane"></div>
		</blockquote>
	</div>
	</script>

	<script type="text/template" id="tweet-image">
	<a href="<%-expanded_url%>" target="_blank"><img src="<%-media_url%>" /></a>
	</script>



{% endblock %}

